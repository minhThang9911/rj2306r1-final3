{
    "include": [
        "remix.env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "app/layouts/Menu/index.jsx",
        "app/layouts/Menu/MenuItem/styles.js",
        "app/layouts/Menu/MenuItem/index.jsx"
    ],
    "compilerOptions": {
        "lib": ["DOM", "DOM.Iterable", "ES2019"],
        "isolatedModules": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "target": "ES2019",
        "strict": true,
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "~/*": ["./app/*"]
        },

        // Remix takes care of building everything in `remix build`.
        "noEmit": true
    }
}
